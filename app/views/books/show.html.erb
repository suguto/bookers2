

 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

       <%= render'/books/info', user: @user, book: @book %>
    </div>

   <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
     <tr>
      <td>
          <%= link_to user_path(@books.user) do %>
          <%= image_tag @books.user.get_profile_image(100,100) %><br>
          <%= @books.user.name %>
          <% end %>
      </td>
      <td>
       <%= link_to book_path(@books) do %>
            <%= @books.title %>
        <% end %>
      </td>
      <td><%= @books.body %></td>
      <% if @books.user == current_user %>
        <td><%= link_to "Edit" ,edit_book_path,class:"btn btn-success" %></td>
        <td><%= link_to "Destroy", book_path, class: "btn btn-sm btn-danger", method: :delete,data:{comfirm: "Are you sure?"} %></td>
       <% end %>
     </tr>
    </table>
   </div>
  </div>
 </div>

