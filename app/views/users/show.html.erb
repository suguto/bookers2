


 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

       <%= render'/books/info', user: @user, book: @book %>
    </div>

   <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table>
     <thead>
      <tr>
       <th>Title</th>
       <th>Opinion</th>
      </tr>
     </thead>

     <tbody>
      <% @books.each do |b| %>
      <tr>
       <td>
        <%= link_to user_path(b.user) do %>
         <%= image_tag b.user.get_profile_image(100,100) %>
        <% end %>
       </td>
       <td><%= link_to b.title , book_path(b) %></td>
       <td><%= b.body %></td>
      </tr>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>
