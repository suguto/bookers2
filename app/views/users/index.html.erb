

 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

       <%= render'/books/info', user: @user, book: @book %>
    </div>

   <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table table-hover table-inverse">
        <thead>
            <tr>
                <th>image</th>
                <th>name</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |u| %>
            <tr>
                <td>
                  <%=image_tag u.get_profile_image(100,100) %></td>
                <td><%= u.name %></td>
                <td><%= link_to'Show', user_path(u) %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

   </div>
  </div>
 </div>


